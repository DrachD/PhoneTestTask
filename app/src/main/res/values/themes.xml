<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <item name="colorOnPrimary">#010035</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_light_F5</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/grey_light_F5</item>
    </style>

    <style name="RippleColorTheme" parent="Widget.AppCompat.ActionButton">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Theme.PhoneTestTask.SearchView">
        <item name="android:textSize">@dimen/searchViewTextSize</item>
        <item name="android:fontFamily">@font/markpro</item>
        <!--        <item name="android:textColorPrimary">@color/black</item>-->
        <!--        <item name="android:textColorHint">@color/black</item>-->
    </style>

    <!--  TabLayout style  -->

    <style name="TabLayout">
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/orange</item>
    </style>

    <style name="TabTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/markpro</item>
    </style>

    <!--  BottomSheetDialog  -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_bottom_sheet</item>
    </style>

</resources>